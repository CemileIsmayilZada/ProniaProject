@using WebUI.ViewModels.Slider
@model SlideUpdateVM
@{
    ViewData["Title"] = "Create";
}
<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4"> Form for Creating Slide item</h6>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">

            <label>Title</label>
            <input asp-for="Title" class="form-control">
            <span class="text-danger" asp-validation-for="Title"></span>

        </div>
        <div class="mb-3">

            <label>Offer</label>
            <input asp-for="Offer" class="form-control">
            <span class="text-danger" asp-validation-for="Offer"></span>

        </div>
        <div>
            <img src="~/assets/images/website-images/@Model.ImagePath" />
        </div>
        <div class="mb-3">

            <label>Photo</label>
            <input asp-for="Photo" class="form-control">

            
        </div>

        <div class="mb-3">

            <label>Description</label>
            <input asp-for="Description" class="form-control">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

